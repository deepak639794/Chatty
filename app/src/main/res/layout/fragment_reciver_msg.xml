<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="4dp"
    android:layout_marginStart="60dp"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"

    android:layout_marginTop="10dp"


   >


    <androidx.constraintlayout.widget.ConstraintLayout

        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sender_bg"
        android:backgroundTint="#DCF7C5"
        android:padding="5dp"
        tools:context=".reciver_msg">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RecieverMSG1"
            android:text="@string/ram_ram"
            android:textColor="@color/black"

            android:maxWidth="300dp"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="10dp"
            android:padding="2dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ReciverTimeStamp1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingStart="15dp"
            android:textColor="#40000000"
            android:layout_marginEnd="15dp"
            android:paddingEnd="10dp"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@+id/RecieverMSG1"
            android:text="@string/Time"/>







    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
